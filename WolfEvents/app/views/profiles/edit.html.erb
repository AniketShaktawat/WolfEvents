<h1>My Profile</h1>

<%= form_for @user, url: update_profile_path, method: :patch do |f| %>
  
  <table>
    <tr>
      <td>ID:</td>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <td>Email:</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>Name:</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>Phone number:</td>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <td>Address:</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>Credit Card:</td>
      <td><%= f.text_field :credit_card %></td>
    </tr>
  </table>

  <%= f.submit "Update Profile" %>
<% end %>
<% if current_user.name != 'admin' %>
<!--  <%#= button_to "Delete My Profile", delete_profile_path(@user) %><br><br>-->
  <%= button_to "Delete My Profile", delete_profile_path(@user_id), method: :delete, data: { confirm: "Are you sure?" } %>
  <!--  <td><%#= button_to 'Delete My Profile', @user, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
<% end %>
<%= link_to 'Home Page', root_path %>
