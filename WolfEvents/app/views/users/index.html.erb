<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
<!--      <th>Password</th>-->
      <th>Name</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>Credit card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if !user.admin? %>
        <tr>
          <td><%= user.email %></td>
  <!--        <td><%#= user.password %></td>-->
          <td><%= user.name %></td>
          <td><%= user.phone_number %></td>
          <td><%= user.address %></td>
          <td><%= user.credit_card %></td>
  <!--        <td><%#= link_to 'Show', user %></td>-->
          <% if current_user.admin? && !user.admin? %>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

