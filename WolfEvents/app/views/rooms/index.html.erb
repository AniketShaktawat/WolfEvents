<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.location %></td>
        <td><%= room.capacity %></td>
        <% if current_user.name == "admin" %>
          <td><%= link_to 'Edit', edit_room_path(room) %></td>
<!--          <td><%#= link_to 'Delete', destroy_room_path(room) %></td>-->
          <td><%= button_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.name == "admin" %>
  <%= link_to 'New Room', new_room_path %>
<% end %>
<%= link_to 'Back', root_path %>
